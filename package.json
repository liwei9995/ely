{
  "name": "@yiyi/ely",
  "type": "module",
  "version": "0.0.2",
  "license": "MIT",
  "author": "Alex Li",
  "description": "A tool that can quickly read and execute project commands.",
  "bin": {
    "ely": "index.js"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "index.js",
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "typecheck": "tsc",
    "check": "ultracite check",
    "clean": "rimraf dist",
    "format": "ultracite fix --unsafe",
    "prepublishOnly": "pnpm run build",
    "publish": "npx jsr publish",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "cross-spawn": "^7.0.6",
    "mri": "^1.2.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^22.10.2",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "ultracite": "^6.5.0"
  },
  "engines": {
    "node": "^22.21.1 || >=24.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "simple-git-hooks"
    ]
  }
}
